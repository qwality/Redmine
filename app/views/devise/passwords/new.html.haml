.container.d-flex.justify-content-center.align-items-center.my-4{style:'min-height: 100%; max-width: fit-content;'}
  .card{style:'min-width: 100%'}
    .card-header
      .card-title
        %h2.card-title
          Forgot your password?
    .card-body
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = f.error_notification

        .form-inputs
          = f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }

        .form-actions
          = f.button :submit, "Send me reset password instructions", class: "btn btn-primary"

      = render "devise/shared/links"