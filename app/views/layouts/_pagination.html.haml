%nav.d-flex.justify-content-center{'aria-label': 'Page navigation'}
  %ul.pagination
    %li.page-item
      = link_to 'First',
                    path + "?page=1",
                    class: 'page-link'
    %li.page-item
      = link_to 'Previous',
                    path + "?page=#{table.page(page).per(C::ITEMS_PER_PAGE).prev_page}",
                    class: 'page-link'
    - table.page(page).per(C::ITEMS_PER_PAGE).total_pages.times do |page|
      %li.page-item
        = link_to page + 1, path + "?page=#{page + 1}", class: 'page-link'
    %li.page-item
      =link_to 'Next',
                   path + "?page=#{table.page(page).per(C::ITEMS_PER_PAGE).next_page}",
                   class: 'page-link'
    %li.page-item
      =link_to 'Last',
                   path + "?page=#{table.page(page).per(C::ITEMS_PER_PAGE).total_pages}",
                   class: 'page-link'